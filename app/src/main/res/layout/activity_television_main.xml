<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?color_background">

        <androidx.viewpager.widget.ViewPager
            android:id="@id/viewpager_featured"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:src="@drawable/launch_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@id/movies"
                android:layout_width="0dp"
                android:alpha=".8"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:background="@drawable/item_television_nested_background_primary_selectable"
                android:focusable="true"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/icon_movie_2_outline"
                    app:tint="?color_dark"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha=".8"
                    android:layout_marginTop="10dp"
                    android:text="@string/movies"
                    android:textColor="?color_dark"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@id/series"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:layout_weight=".2"
                android:background="@drawable/item_television_nested_background_primary_selectable"
                android:focusable="true"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/icon_series_outline"
                    app:tint="?color_dark"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha=".8"
                    android:layout_marginTop="10dp"
                    android:text="@string/series"
                    android:textColor="?color_dark"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@id/tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:layout_weight=".2"
                android:background="@drawable/item_television_nested_background_primary_selectable"
                android:focusable="true"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/icon_tv_outline"
                    app:tint="?color_dark"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha=".8"
                    android:layout_marginTop="10dp"
                    android:text="@string/tv"
                    android:textColor="?color_dark"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@id/mylist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:layout_weight=".2"
                android:background="@drawable/item_television_nested_background_primary_selectable"
                android:focusable="true"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/icon_folder_outline"
                    app:tint="?color_dark"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha=".8"
                    android:layout_marginTop="10dp"
                    android:text="@string/mylist"
                    android:textColor="?color_dark"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@id/configuration"
                android:layout_width="0dp"
                android:alpha=".8"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:background="@drawable/item_television_nested_background_primary_selectable"
                android:focusable="true"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/icon_gear_2_outline"
                    app:tint="?color_dark"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha=".8"
                    android:layout_marginTop="10dp"
                    android:text="@string/configuration"
                    android:textColor="?color_dark"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>