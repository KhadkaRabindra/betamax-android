<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@id/tvchannel_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/item_television_tvchannel_selectable"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingStart="15dp"
    android:paddingTop="7dp"
    android:paddingEnd="15dp"
    android:paddingBottom="7dp">

    <androidx.cardview.widget.CardView
        android:id="@id/tvchannel_playing"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        app:cardBackgroundColor="?color_dark"
        app:cardCornerRadius="3.5dp"
        app:cardElevation="0dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/tvchannel_thumbnail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:placeholderImageScaleType="centerCrop"
        app:roundedCornerRadius="5dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="?color_dark" />

    <TextView
        android:id="@id/tvchannel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:text="@string/tv"
        android:textColor="?color_dark"
        android:textSize="13sp" />

</LinearLayout>